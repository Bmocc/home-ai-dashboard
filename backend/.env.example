# Backend server configuration
APP_HOST=0.0.0.0
APP_PORT=8000
APP_ALLOWED_ORIGINS=http://localhost:5173,http://127.0.0.1:5173,*
APP_DB_PATH=data/motion.db
APP_PASSWORD_SALT=home-ai-dashboard

# Laptop camera monitor (set CAM_MONITOR_ENABLED=false to disable)
CAM_MONITOR_ENABLED=true
CAMERA_INDEX=0
CAM_FRAME_INTERVAL=1.0
CAM_MOTION_THRESHOLD=25.0
CAM_MIN_AREA=5000
CAM_BASELINE_REFRESH_FRAMES=150

# Object detection (set AI_DEVICE_MODE=gpu if you have CUDA available)
AI_DETECTION_ENABLED=true
AI_DEVICE_MODE=cpu
AI_MODEL_PATH=models/yolov8n.pt
AI_CONFIDENCE_THRESHOLD=0.25
AI_MAX_DETECTIONS=3
APP_SNAPSHOT_DIR=data/snaps

# Auth / tokens
APP_AUTH_USERNAME=admin
APP_AUTH_PASSWORD=changeme
APP_JWT_SECRET=super-secret-key
APP_TOKEN_EXPIRE_SECONDS=3600

